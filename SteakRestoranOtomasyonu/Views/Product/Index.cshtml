@model IEnumerable<RestoranOtomasyonu.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<div class="text-center mb-5 hero-section">
    <div class="hero-content">
        <h1 class="display-4 mb-4">
            <i class="fas fa-utensils text-danger me-2"></i>
            ÜRÜNLER
        </h1>
        <p class="lead text-light">Menü ürünlerini yönetin</p>
        <div class="mt-4">
            <a asp-action="Create" class="cyber-button">
                <span></span><span></span><span></span><span></span>
                <i class="fas fa-plus me-2"></i>YENİ ÜRÜN EKLE
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="futuristic-panel">
                    <div class="panel-glow"></div>
                    <div class="panel-content text-center">
                        <div class="cyber-icon">
                            <i class="fas fa-hamburger"></i>
                        </div>
                        <h5 class="neo-title">@item.Name</h5>
                        <div class="status-badge status-available mb-2">
                            <i class="fas fa-tag me-1"></i>
                            @item.Category?.Name
                        </div>
                        <div class="price-badge mb-3">
                            @item.Price.ToString("C")
                        </div>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <p class="neo-text">@item.Description</p>
                        }
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="neo-button">
                                <i class="fas fa-edit me-1"></i>
                                Düzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="neo-button delete-btn">
                                <i class="fas fa-trash me-1"></i>
                                Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .delete-btn {
        background: rgba(231, 76, 60, 0.1);
        border-color: rgba(231, 76, 60, 0.2);
    }
    .delete-btn:hover {
        background: rgba(231, 76, 60, 0.2);
    }
    .price-badge {
        display: inline-block;
        padding: 8px 20px;
        background: rgba(46, 204, 113, 0.1);
        border: 1px solid rgba(46, 204, 113, 0.2);
        color: #2ecc71;
        border-radius: 20px;
        font-size: 1.2rem;
        font-weight: 600;
        text-shadow: 0 0 10px rgba(46, 204, 113, 0.3);
    }
</style> 